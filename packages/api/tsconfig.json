{
  "compilerOptions": {
    // Compiling JS version
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2020"
    ],
    // Strict
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // Case-sensitive file names
    "forceConsistentCasingInFileNames": true,
    // Output compiling directory
    "outDir": "./dist",
    // Code directory
    "rootDir": "./src",
    // Use better way to include libraries after compiling
    "esModuleInterop": true,
    // Append source map after compiling
    "sourceMap": false,
    // Remove code comments after compiling
    "removeComments": false,
    // Location of the paths param,
    "baseUrl": "./",
    // Generate d.ts files
    "declaration": true,
    // Library aliases (use `tsconfig-paths` to load them)
    "paths": {
    }
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./tests",
    "./scripts/build.ts"
  ]
}
